<table class='table table-hover table-striped'>
    <thead>
        <tr data-table-header='{{tier.name}}' class="table-inverse">
            <th class="fit"></th>
            {{#unless media.isMobile}}
                <th class="text-right">
                    #
                </th>
            {{/unless}}
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody class="table-striped collapse show" data-collapse-target='{{tier.name}}'>
        {{#each tier.pokemon as |pokemon|}}
            {{table-row pokemon=pokemon}}
        {{/each}}
    </tbody>
</table>
