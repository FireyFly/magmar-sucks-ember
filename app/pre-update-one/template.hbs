<table class='table table-hover table-striped'>
    <thead>
        <tr data-table-header='{{tier.name}}' class="table" style="background-color:#edf7f7">
            <th class="text-right">
                #
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody class="table-striped collapse show" data-collapse-target='{{tier.name}}'>
        {{#each model as |pokemon|}}
        <tr>
          {{#unless media.isMobile}}
              <td class="text-right">
                  #{{pokemon.id}}
              </td>
          {{/unless}}
          <td>
              <a href="http://bulbapedia.bulbagarden.net/wiki/{{pokemon.name}}">{{pokemon.name}}</a>
          </td>
          <td>
              {{pokemon.description}}
          </td>
        </tr>
        {{/each}}
    </tbody>
</table>
